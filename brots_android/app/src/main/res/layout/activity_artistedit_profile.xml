<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0e1636"
    android:orientation="vertical"
    tools:context=".activity.Profile.ArtisteditProfileActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:src="@drawable/back_arrow"
            android:layout_weight="0.2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:text="Edit profile"
            android:textSize="16dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:visibility="visible"
            android:id="@+id/saveprofile"
            android:src="@drawable/tick"
            android:layout_weight="0.2"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:foregroundGravity="center"
            app:civ_border_color="#fff"
            app:civ_border_width="2dp" />



    </RelativeLayout>

    <TextView
        android:id="@+id/change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Change Photo"
        android:textSize="15dp"
        android:textColor="#00B6EF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="12dp"
            android:id="@+id/txt_name"
            android:text="First Name"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:hint=""
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:inputType="textCapSentences"
            android:layout_height="wrap_content"
            android:id="@+id/edittxt_name"

            android:textSize="12dp"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="12dp"
            android:id="@+id/txt_bio"
            android:text="Last Name"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:hint=""
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:inputType="textCapSentences"
            android:layout_height="wrap_content"
            android:id="@+id/bio"

            android:textSize="12dp"

            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"
        android:alpha=".3"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"

            android:layout_marginTop="10dp"
            android:text="@string/your_string_here"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="12dp"
                android:id="@+id/txt_email"
                android:text="Email address"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />

            <ImageView
                android:id="@+id/editmail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_edit_black_24dp"
                android:layout_gravity="bottom"/>
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:hint=""
            android:focusable="false"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:inputType="textCapSentences"
            android:layout_height="wrap_content"
            android:id="@+id/edittxtemail"

            android:textSize="12dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="12dp"
            android:id="@+id/txt_phone"
            android:text="Phone number"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:hint=""
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:id="@+id/edittxt_phone"

            android:textSize="12dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="12dp"
            android:id="@+id/txt_gender"
            android:text="Gender"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:hint=""
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:inputType="textCapSentences"
            android:layout_height="wrap_content"
            android:id="@+id/gender"

            android:textSize="12dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="12dp"
            android:text="City"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/city_a"
            android:layout_width="match_parent"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:hint=""
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:inputType="textCapSentences"
            android:layout_height="wrap_content"

            android:textSize="12dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="12dp"
            android:text="Country"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:hint=""
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:inputType="textCapSentences"
            android:layout_height="wrap_content"
            android:id="@+id/countrya"

            android:textSize="12dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2.5"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:textSize="12dp"
                android:layout_height="wrap_content"
                android:text="Gender :"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:textSize="12dp"
                android:id="@+id/male"
                android:layout_height="wrap_content"
                android:text="Male"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="12dp"
                android:id="@+id/female"
                android:layout_height="wrap_content"
                android:text="Female"/>


        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>