<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_height="wrap_content"

            android:id="@+id/cv">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"

                android:background="@drawable/libshape"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layout"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.5"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"
                        android:id="@+id/imageshow"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Main Title"
                                android:textColor="#fff"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:maxLines="1"
                                android:textSize="14dp"
                                android:layout_marginTop="15dp"
                                android:textStyle="bold"
                                android:id="@+id/titleHead"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="12dp"
                            android:layout_marginRight="15dp"
                            android:maxLines="1"
                            android:text="SubTitle"
                            android:textColor="#fff"
                            android:id="@+id/titlesub"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:visibility="gone"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal"
                            android:weightSum="6">

                            <ImageView
                                android:id="@+id/imgdislike"
                                android:layout_width="0dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"

                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:src="@drawable/downwhite" />

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center"
                                android:background="#fff"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/textdislike"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:text="98" />

                            <ImageView
                                android:id="@+id/imgpoint"
                                android:layout_width="0dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:src="@drawable/startwhite" />

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center"
                                android:background="#fff"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/textpoint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:text="200" />

                            <ImageView
                                android:id="@+id/imglike"
                                android:layout_width="0dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:src="@drawable/upwhite" />

                            <TextView
                                android:id="@+id/txtlike"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="86" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/deletesong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_delete_black_24dp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.1"
                        android:visibility="gone"
                        android:layout_margin="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/arrow"
                        android:id="@+id/imageshowwave"/>

                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha=".3"
                android:background="@color/white"
                android:layout_marginTop="75dp"
       ></View>
        </android.support.v7.widget.CardView>
    </FrameLayout>
</LinearLayout>